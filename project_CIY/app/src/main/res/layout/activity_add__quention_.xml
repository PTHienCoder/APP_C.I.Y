<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddPostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Hãy đặt ra vấn đề.\nCộng cồng sẽ giải quyết giúp bạn."/>


        <EditText
            android:id="@+id/tvtitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Tiêu đề vấn đề ?"
            android:inputType="text"
            android:padding="16dp" />

        <EditText
            android:id="@+id/tvcontent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Hãy mô tả vấn đề của bạn ?"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Hãy chọn lĩnh vực của vấn đề ."/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp"
            android:id="@+id/spinnerdata"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="40dp"
            android:theme="@style/Button.White"
            android:textColor="@android:color/white"
            style="@style/loginButton"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Hình ảnh minh hoạ (nếu có)."/>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/image_post_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:background="#A9A9A9	"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>