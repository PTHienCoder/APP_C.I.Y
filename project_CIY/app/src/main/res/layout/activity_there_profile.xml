<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:layout_scrollFlags="enterAlways|scroll"
    android:layout_height="match_parent"
    tools:context=".ThereProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/srv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/colorXam"
                android:scaleType="fitXY"></ImageView>

            <RelativeLayout
                android:id="@+id/rlavata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp">
                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                    android:id="@+id/avatar"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_face"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/zxc"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rlavata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/nametv"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nametv"
                    android:id="@+id/emailtv"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/emailtv"
                    android:id="@+id/phonetv"
                    android:text="5653"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_below="@+id/phonetv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <Button
                        android:paddingRight="30dp"
                        android:id="@+id/fab_nhantin"
                        android:layout_marginTop="4dp"
                        style="@style/loginButton"
                        android:drawableRight="@drawable/ic_add_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhắn Tin"/>

                    <Button
                        android:id="@+id/fab_follow"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fab_nhantin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/skip_button"
                        android:text="Follow" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/hrr2"
                android:background="#DCDCDC"

                android:layout_below="@+id/zxc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textColor="#DCDCDC" />
            <RelativeLayout
                android:id="@+id/asd"
                android:layout_below="@+id/hrr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnhet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hrr1"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/flowing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10" />
                            <TextView
                                android:textSize="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang Follow"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/flow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="53" />
                            <TextView
                                android:textSize="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Follower"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/hrr4"
                    android:background="#DCDCDC"
                    android:layout_margin="15dp"
                    android:layout_below="@+id/btnhet"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:textColor="#DCDCDC" />
                <LinearLayout
                    android:id="@+id/btnhet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hrr4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_group"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableStart="@drawable/ic_project"
                        android:padding="8dp"
                        android:text="Ý tưởng"
                        android:textSize="10dp" />

                    <Button
                        android:padding="8dp"
                        android:layout_margin="5dp"
                        android:id="@+id/btn_quention"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableStart="@drawable/ic_tiktok"
                        android:text="Video"
                        android:textSize="10dp" />
                    <Button
                        android:padding="8dp"
                        android:layout_margin="5dp"
                        android:id="@+id/btn_discover"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableStart="@drawable/ic_img"
                        android:text="Ảnh"
                        android:textSize="10dp" />


                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/hrr3"
                android:background="#DCDCDC"
                android:layout_margin="15dp"
                android:layout_below="@+id/asd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textColor="#DCDCDC" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/hrr3"
                android:id="@+id/rcv_they_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>